---
export interface Props {
  title: string;
  subtitle?: string;
  size?: 'sm' | 'md' | 'lg';
  align?: 'left' | 'center';
  maxW?: string;
  showDivider?: boolean;
}

const {
  title,
  subtitle,
  size = 'md',
  align = 'left',
  maxW = 'max-w-5xl',
  showDivider = true,
} = Astro.props as Props;

// Consistent vertical rhythm across the site
const sizeToPadding: Record<string, string> = {
  sm: 'py-8 sm:py-10',
  md: 'py-10 sm:py-14',
  lg: 'py-12 sm:py-16 lg:py-20',
};

const alignClasses = align === 'center' ? 'text-center mx-auto' : '';
---
<section aria-label="page hero" class={`mx-auto ${maxW} px-6 sm:px-6 lg:px-8 ${sizeToPadding[size]}`}>
  <h1 class={`font-extrabold tracking-tight ${align === 'center' ? 'text-3xl sm:text-4xl' : 'text-3xl sm:text-4xl'}`}>
    {title}
  </h1>
  {subtitle && (
    <p class={`mt-2 text-zinc-600 dark:text-zinc-300 max-w-2xl ${alignClasses}`}>
      {subtitle}
    </p>
  )}
</section>

{showDivider && <div class="border-t border-zinc-200 dark:border-white/10"></div>}
