---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleMenu from '~/components/common/ToggleMenu.astro';
import Button from '~/components/ui/Button.astro';

import { getHomePermalink } from '~/utils/permalinks';
import { trimSlash } from '~/utils/permalinks';
import type { CallToAction } from '~/types';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}
interface MenuLink extends Link {
  links?: Array<MenuLink>;
}

export interface Props {
  id?: string;
  links?: Array<MenuLink>;
  actions?: Array<CallToAction>;
  socials?: Array<MenuLink>;
  isSticky?: boolean;
  isDark?: boolean;
  isFullWidth?: boolean;
  showToggleTheme?: boolean;
  showRssFeed?: boolean;
  position?: string;
}

const {
  id = 'header',
  links = [],
  actions = [],
  socials = [],
  isSticky = false,
  isDark = false,
  isFullWidth = false,
  showToggleTheme = false,
  showRssFeed = false,
  position = 'center',
} = Astro.props;

const currentPath = '/' + trimSlash(Astro.url.pathname);

const isActive = (href?: string) => {
  if (!href) return false;
  const h = '/' + trimSlash(href);
  return currentPath === h || currentPath.startsWith(h + '/');
};
---

<header
  class:list={[
    { sticky: isSticky, relative: !isSticky, dark: isDark },
    'top-0 z-40 flex-none mx-auto w-full border-b border-gray-50/0 transition-[opacity] ease-in-out',
  ]}
  {...(isSticky ? { 'data-aw-sticky-header': true } : {})}
  {...(id ? { id } : {})}
>
  <div class="absolute inset-0"></div>

  <div
    class:list={[
      'relative text-default py-3 px-3 md:px-6 mx-auto w-full',
      { 'md:flex md:justify-between': position !== 'center' },
      { 'md:grid md:grid-cols-3 md:items-center': position === 'center' },
      { 'max-w-7xl': !isFullWidth },
    ]}
  >
    {/* LEFT / TOP BAR */}
    <div class:list={[{ 'mr-auto rtl:mr-0 rtl:ml-auto': position === 'right' }, 'flex justify-between']}>
      <a class="flex items-center" href={getHomePermalink()}>
        <Logo />
      </a>

      {/* MOBILE: socials + burger */}
      <div class="flex items-center gap-3 md:hidden">
        {socials?.length ? (
          <div class="aw-mobile-socials flex items-center gap-3">
            {socials.map((social) => (
              <a
                href={social.href}
                class="text-gray-500 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white transition"
                aria-label={social.ariaLabel}
                target="_blank"
                rel="noreferrer"
              >
                {social.icon ? (
                  <Icon name={social.icon} class="w-5 h-5" />
                ) : (
                  <span class="text-sm font-medium">{social.text}</span>
                )}
              </a>
            ))}
          </div>
        ) : null}

        <ToggleMenu />
      </div>
    </div>

    {/* NAV (desktop) */}
    <nav
      class="aw-nav items-center w-full md:w-auto hidden md:flex md:mx-5 text-default overflow-y-auto overflow-x-hidden md:overflow-y-visible md:overflow-x-auto md:justify-self-center"
      aria-label="Main navigation"
    >
      <ul class="flex flex-col md:flex-row md:self-center w-full md:w-auto text-xl md:text-[0.9375rem] tracking-[0.01rem] font-medium md:justify-center">
        {
          links.map(({ text, href, links }) => (
            <li class={links?.length ? 'dropdown' : ''}>
              {links?.length ? (
                <>
                  <button
                    type="button"
                    class:list={[
                      'relative hover:text-link dark:hover:text-white px-4 py-3 flex items-center whitespace-nowrap transition-colors',
                      { 'aw-link-active text-link font-semibold': links?.some((l) => isActive(l.href)) },
                    ]}
                    aria-haspopup="true"
                    aria-expanded="false"
                  >
                    {text}
                    <Icon name="tabler:chevron-down" class="w-3.5 h-3.5 ml-0.5 rtl:ml-0 rtl:mr-0.5 hidden md:inline" />
                  </button>

                  <ul class="dropdown-menu md:backdrop-blur-md dark:md:bg-dark rounded md:absolute pl-4 md:pl-0 md:hidden font-medium md:bg-white/90 md:min-w-[200px] drop-shadow-xl">
                    {links.map(({ text: text2, href: href2 }) => (
                      <li>
                        <a
                          class:list={[
                            'first:rounded-t last:rounded-b md:hover:bg-gray-100 hover:text-link dark:hover:text-white dark:hover:bg-gray-700 py-2 px-5 block whitespace-no-wrap transition-colors',
                            { 'text-link font-semibold': isActive(href2) },
                          ]}
                          href={href2}
                          {...(isActive(href2) ? { 'aria-current': 'page' } : {})}
                        >
                          {text2}
                        </a>
                      </li>
                    ))}
                  </ul>
                </>
              ) : (
                <a
                  class:list={[
                    'relative hover:text-link dark:hover:text-white px-4 py-3 flex items-center whitespace-nowrap transition-colors',
                    { 'aw-link-active text-link font-semibold': isActive(href) },
                  ]}
                  href={href}
                  {...(isActive(href) ? { 'aria-current': 'page' } : {})}
                >
                  {text}
                </a>
              )}
            </li>
          ))
        }
      </ul>
    </nav>

    {/* RIGHT-HAND (desktop only) */}
    <div
      class:list={[
        { 'ml-auto rtl:ml-0 rtl:mr-auto': position === 'left' },
        'aw-desktop-right hidden md:self-center md:flex items-center gap-4 md:mb-0 md:static md:justify-self-end',
      ]}
    >
      {socials?.length ? (
        <div class="flex items-center gap-3">
          {socials.map((social) => (
            <a
              href={social.href}
              class="text-gray-500 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white transition"
              aria-label={social.ariaLabel}
              target="_blank"
              rel="noreferrer"
            >
              {social.icon ? (
                <Icon name={social.icon} class="w-5 h-5" />
              ) : (
                <span class="text-sm font-medium">{social.text}</span>
              )}
            </a>
          ))}
        </div>
      ) : null}

      {actions?.length ? (
        <span class="ml-2">
          {actions.map((btnProps) => (
            <Button {...btnProps} class="ml-2 py-2.5 px-5.5 md:px-6 font-semibold shadow-none text-sm w-auto" />
          ))}
        </span>
      ) : null}
    </div>
  </div>

  <style>
    /* Animated underline for active TOP-LEVEL items */
    .aw-nav > ul > li > a.aw-link-active,
    .aw-nav > ul > li > button.aw-link-active {
      position: relative;
    }
    .aw-nav > ul > li > a.aw-link-active::after,
    .aw-nav > ul > li > button.aw-link-active::after {
      content: "";
      position: absolute;
      left: 1rem;
      right: 1rem;
      bottom: 0.45rem;
      height: 2px;
      background: currentColor;
      border-radius: 2px;
      transform-origin: center;
      animation: nav-underline .2s ease;
    }
    @keyframes nav-underline {
      from { transform: scaleX(0); }
      to   { transform: scaleX(1); }
    }
  </style>

  <style is:global>
    /* Hide socials on mobile when menu is open */
    #header.expanded .aw-mobile-socials {
      display: none;
    }

    /* Ensure desktop-right never appears on mobile when menu is open */
    @media (max-width: 767px) {
      #header.expanded .aw-desktop-right {
        display: none !important;
      }
    }
  </style>
</header>
