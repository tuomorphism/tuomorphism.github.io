---
import Item from '~/components/blog/ListItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---

<section class="mx-auto w-full max-w-3xl px-4 sm:px-6">
  <ul class="space-y-4 md:space-y-5">
    {posts.map((post) => (
      <li class="m-0">
        <Item post={post} />
      </li>
    ))}
  </ul>
</section>
