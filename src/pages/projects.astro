---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import { getCollection } from 'astro:content';
import { headerData } from '~/navigation';
import Hero from '~/components/widgets/Hero.astro';
import ProjectsGrid from '~/components/projects/ProjectsGrid.astro';

const projects = await getCollection('projects');
const ordered = [...projects].sort((a, b) => {
  if (a.data.tier !== b.data.tier) return a.data.tier - b.data.tier;
  return a.data.title.localeCompare(b.data.title);
});

const metadata = { title: 'Projects' };
---

<Layout metadata={metadata}>
  <Fragment slot="header"></Fragment>
  <Header {...headerData} isSticky showToggleTheme />

  <Hero
    title="Projects"
    subtitle="Gallery of projects on various topics in math, computer science and statistics."
    size="sm"
    align="left"
    maxW="max-w-5xl"
    showDivider={true}
  />

  <section>
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pt-4 pb-8 sm:pt-6 sm:pb-12">
      <ProjectsGrid items={ordered} />
    </div>
  </section>
</Layout>
