---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Content from '~/components/widgets/Content.astro';
import { headerData } from '~/navigation';
import { getPermalink } from '~/utils/permalinks';

const metadata = { title: 'About' };

const showcaseVideoHtml = `
  <video
    src="/videos/showcase.mp4"
    autoplay
    muted
    loop
    playsinline
    class="mx-auto w-full rounded-lg bg-gray-500 shadow-lg aspect-[4/3] object-cover"
  ></video>
`;
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>

  <Fragment slot="header">
    <Header {...headerData} isSticky showToggleTheme />
  </Fragment>

  <Content
    columns={2}
    items={[
      {
        callToAction: {
          text: 'Projects',
          href: getPermalink('projects'),
          icon: 'lucide:folder-kanban',
        },
      },
      {
        callToAction: {
          text: 'Blog',
          href: getPermalink('blog'),
          icon: 'lucide:newspaper',
        },
      },
    ]}
    image={showcaseVideoHtml}
  >
    <Fragment slot="content">
      <h5 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Hi! I'm Tuomas.</h5>
      <p>Iâ€™m into mathematical modeling, spatial computing with sensor data, and machine learning; generally the process of turning abstract theory into cool models and systems.</p>
      <br />
      <p>This site is a collection of projects and blog posts, ranging from complete systems to interesting deep-dives into current research.</p>
      <br />
      <p>
        If you're interested in a more complete background, you can find it on my 
        <a class="hover:text-gray-1200 underline underline-offset-4 transition-colors duration-200" href="https://www.linkedin.com/in/tuomorphism/" target="_blank">
          LinkedIn profile
        </a>.
      </p>
    </Fragment>
  </Content>
</Layout>
